{
  "name": "@granite/api",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "start": "bun run dist/index.js",
    "test": "bun test",
    "lint": "eslint src/**/*.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "bun run src/db/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "hono": "catalog:",
    "drizzle-orm": "catalog:",
    "zod": "catalog:",
    "better-auth": "catalog:",
    "@hono/node-server": "catalog:api",
    "@hono/zod-validator": "catalog:api",
    "postgres": "catalog:api",
    "dotenv": "catalog:api",
    "@granite/shared": "workspace:*"
  },
  "devDependencies": {
    "drizzle-kit": "^0.20.0",
    "typescript": "catalog:",
    "@types/bun": "latest"
  }
}
